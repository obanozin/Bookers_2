    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

<h1>User info</h1>

<%= form_for(@user) do |f| %>
	<h4>Name</h4>
	<%= f.text_field :name %>

	<%= f.attachment_field :profile_image %>

	<h4>introduction</h4>
	<%= f.text_area :introduction %>

	

	<%= f.submit 'Update User' %>
<% end %>