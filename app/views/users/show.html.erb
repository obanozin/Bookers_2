    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>


<div class="container">
	<div class="row">
		<div class="col-lg-4">
            
		<section>
			<h1>User info</h1>

			<%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %>

			<p>name : <%= @user.name %></p>

			<p>introduction : <%= @user.introduction %></p
	            <% if @user.id == current_user.id %>
				<p><%= link_to "プロフィール編集", edit_user_path(@user), class: "pull-leftt" %></p>
			<% end %>

		</section>

		<h3>New book</h3>
		<!-- form_for部分 -->
		<%= form_for(@book) do |f| %>

		<h4>Title</h4>
		<%= f.text_field :title %>

		<h4>Body</h4>
		<%= f.text_area :body %>

		<br><%= f.submit 'Create Book' %></br>

		<% end %>
        </div>
        <div class="col-lg-8">
			<table class="table table-striped">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
			            <th>Opinon</th>
			        </tr>
			    </thead>

				<tbody>
					<% @books.each do |book| %>
						<tr> 
							<th>
								<%= attachment_image_tag @user, :profile_image, :fill, 50, 50 %>
							</th>
							<td>
							     <%= link_to "#{book.title}", "/books/#{book.id}" %>
							</td>
							<td>
							    <%= book.body %>
							</td>

						</tr>  
					<% end %>
				</tbody>   
			</table>
		</div>
	</div>
</div>